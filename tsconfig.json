{
  "compilerOptions": {
    "strict": true, 
    "jsx": "react-jsx", 
    "allowJs": true,
    "noImplicitAny": true, 
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
